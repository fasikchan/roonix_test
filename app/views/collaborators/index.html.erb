<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <%= link_to 'New collaborator', new_collaborator_path, class: 'btn btn-default' %>
  </div>
</div>
<hr>

<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <% if @collaborators %>
      <% @collaborators.each do |var| %>
        <p> <%= var.first_name %> <%= var.second_name %> <%= var.last_name %>, <%= var.sex %></p>
        <p> <%= var.salary %>, <%= var.departments.pluck(:department_name) %>

        <p><%= link_to 'Show', collaborator_path(var), class: "btn btn-info btn-sm" %> 
          <%= link_to 'Edit', edit_collaborator_path(var), class: "btn btn-warning btn-sm" %> 
          <%= link_to 'Delete', collaborator_path(var), method: :delete, class: "btn btn-danger btn-sm" %></p>
        <hr>
      <% end %>
    <% end %>
  </div>
</div>
