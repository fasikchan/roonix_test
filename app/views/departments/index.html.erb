<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <%= link_to 'New department', new_department_path, class: 'btn btn-default' %>
  </div>
</div>
<hr>

<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <% if @departments %>
      <% @departments.each do |var| %>
        <p> <%= var.department_name %></p>
        <p> Collaborators quantity: <%= var.collaborators_quantity %></p>
        <p> Max salary: <%= var.max_salary %></p>

        <p><%= link_to 'Show', department_path(var), class: "btn btn-info btn-sm" %> 
          <%= link_to 'Edit', edit_department_path(var), class: "btn btn-warning btn-sm" %> 
          <%= link_to 'Delete', department_path(var), method: :delete, class: "btn btn-danger btn-sm" %></p>
        <hr>
      <% end %>
    <% end %>
  </div>
</div>
