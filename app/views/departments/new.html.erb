<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <h4>New department</h4>
  </div>
</div>
<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <%= form_for(:department, url: departments_path) do |f| %>
      <%= f.label :department_name %>
      <%= f.text_area :department_name, class: "form-control", placeholder: "Department name, ex IT"  %>

      <%= f.submit "Create department", class: 'btn btn-default' %>
    <% end %>
  </div>
</div>